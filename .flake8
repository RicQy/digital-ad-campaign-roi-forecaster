[flake8]
max-line-length = 88
extend-ignore = E203,W503,F401,F841,E501,W293,E722,F541,E402,W504,B008,B903
exclude = 
    .git,
    __pycache__,
    .venv,
    .pytest_cache,
    build,
    dist,
    *.egg-info,
    .tox,
    .mypy_cache,
    venv,
    env
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F841,E501
    test_*.py:F401,F841,E501
    demo_*.py:F401,F841,E501
    docs/*:F401,F841,E501
